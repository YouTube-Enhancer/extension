{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "eslint",
			"problemMatcher": ["$eslint-stylish"],
			"label": "eslint: lint whole folder",
			"options": {
				"windows": {
					"shell": {
						"executable": "cmd.exe",
						"args": ["/d", "/c"]
					}
				},
				"linux": {
					"shell": {
						"executable": "/bin/bash",
						"args": ["-c"]
					}
				},
				"osx": {
					"shell": {
						"executable": "/bin/bash",
						"args": ["-c"]
					}
				}
			}
		}
	]
}
